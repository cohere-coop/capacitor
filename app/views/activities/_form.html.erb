<%= form_for activity do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= render partial: "error_for_field", locals: { model: @activity, field: :name } %>

  <%- if current_account.features.bills_time? %>
    <%= f.label :capacity %>
    <%= f.number_field :capacity %>
    <%= render partial: "error_for_field", locals: { model: @activity, field: :capacity } %>
  <%- end %>

  <%= f.label :weekly_burn_rate %>
  <%= f.number_field :weekly_burn_rate %>
  <%= render partial: "error_for_field", locals: { model: @activity, field: :weekly_burn_rate } %>

  <%- if current_account.features.bills_time? %>
    <%= f.label "" do %>
      <%= f.check_box :billable %>
      Billable?
    <% end %>
  <%- end %>

  <%= f.label "" do %>
    <%= f.check_box :active %>
    Active?
  <% end %>

  <%= f.submit submit_text %>
  <%= link_to "Return To Dashboard", root_path %>
<% end %>
