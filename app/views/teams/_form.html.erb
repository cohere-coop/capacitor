<%= form_for @team do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= render partial: "error_for_field", locals: { model: @team, field: :name } %>
<fieldset>
  <legend> Projects </legend>
  <%= collection_check_boxes(:team, :project_ids, Project.all, :id, :name) %>
</fieldset>

<fieldset>
  <legend> Accounts </legend>
  <%= collection_check_boxes(:team, :account_ids, Account.all, :id, :name) %>
</fieldset>
  <%= f.submit submit_text %>
<% end %>
